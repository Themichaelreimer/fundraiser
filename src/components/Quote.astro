---
    const {quoteText, attributionName, attributionTitle} = Astro.props;
---
<section class="relative isolate overflow-hidden px-6 py-24 sm:py-32 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-4xl">
    <figure class="mt-10">
      <blockquote class="text-center text-xl/8 font-semibold text-gray-900 sm:text-2xl/9">
        <p>“{quoteText}”</p>
      </blockquote>
      <figcaption class="mt-10">
        <div class="mt-4 flex items-center justify-center space-x-3 text-base">
          <div class="font-semibold text-gray-900">{attributionName}</div>
          <div class="text-gray-600">{attributionTitle}</div>
        </div>
      </figcaption>
    </figure>
  </div>
</section>
